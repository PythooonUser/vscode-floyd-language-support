{
  "name": "vscode-floyd-language-support",
  "displayName": "Floyd",
  "description": "Floyd Language Support for VS Code.",
  "license": "MIT",
  "version": "0.3.0",
  "publisher": "pythooonuser",
  "author": {
    "name": "Felix Siebeneicker"
  },
  "icon": ".media/icon.png",
  "galleryBanner": {
    "color": "#8CAD08FF",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pythooonuser/vscode-floyd-language-support"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "engines": {
    "vscode": "^1.23.1"
  },
  "main": "./client/out/extension",
  "activationEvents": [
    "onLanguage:floyd"
  ],
  "contributes": {
    "languages": [
      {
        "id": "floyd",
        "aliases": [
          "Floyd",
          "floyd"
        ],
        "extensions": [
          ".floyd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Floyd Extension Configuration",
      "properties": {
        "floyd.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    },
    "grammars": [
      {
        "language": "floyd",
        "scopeName": "source.floyd",
        "path": "./syntaxes/floyd.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "floyd",
        "path": "./snippets/floyd.json"
      }
    ]
  },
  "scripts": {
    "grammar": "js-yaml syntaxes/floyd.tmLanguage.yaml > syntaxes/floyd.tmLanguage.json",
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "cd server && npm run test"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.30",
    "js-yaml": "^3.13.1",
    "tslint": "^5.16.0",
    "typescript": "^3.8.3"
  }
}

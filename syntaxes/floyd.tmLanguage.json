{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Floyd",
	"scopeName": "source.floyd",
	"patterns": [
		{
			"name": "keyword.other.floyd",
			"match": "\\b(abstract|break|day|firstWord|getKey|halt|isfirst|moveto|objectsInside|random|serial|setPlayer|split|stopDaemon|string|super|verb|write|addScores|case|default|fetch|getLong|has|issecond|name|pluralInside|return|setColor|setShort|startDaemon|stopTimer|strstr|switch|void|array|class|do|for|getShort|if|location|noun|pnoun|room|getLong|setTime|startTimer|string|strrstr|time|while|box|count|else|gender|getWord|int|menu|object|quit|scores|setNoun|sizeof|StatusLineFormat|strlen|substr|toggle|with)\\b"
		},
		{
			"name": "comment.line.double-slash.floyd",
			"begin": "//",
			"end": "\\n"
		},
		{
			"name": "comment.block.floyd",
			"begin": "/\\*",
			"end": "\\*/"
		},
		{
			"name": "string.quoted.double.floyd",
			"begin": "\"",
			"end": "\""
		},
		{
			"name": "constant.numeric.floyd",
			"match": "\\b[1-9][0-9]*|0\\b"
		},
		{
			"name": "constant.language.floyd",
			"match": "\\bNULL\\b"
		}
	]
}

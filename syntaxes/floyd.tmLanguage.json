{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Floyd",
	"scopeName": "source.floyd",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#storage"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.floyd",
				"match": "\\b(if|while|for|return|break|halt|case|default|switch|do|else)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.floyd",
			"begin": "\"",
			"end": "\"",
			"patterns": []
		},
		"storage": {
			"patterns": [{
				"name": "storage.type.floyd",
				"match": "\\b(int|string|object|class)\\b"
			}]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line.floyd",
					"match": "//.*$"
				},
				{
					"name": "comment.block.floyd",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	}
}
